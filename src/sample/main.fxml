<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="900.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <AnchorPane VBox.vgrow="ALWAYS">
        <TextField fx:id="user" layoutX="28.0" layoutY="14.0" prefHeight="26.0" prefWidth="149.0" promptText="Username"/>
        <TextArea fx:id="screen" layoutX="201.0" layoutY="226.0" prefHeight="26.0" prefWidth="358.0" promptText="Type your message here..." wrapText="true"/>
        <Button fx:id="get" layoutX="65.0" layoutY="52.0" mnemonicParsing="false" onAction="#getKeys" text="Get Keys"/>
        <Button fx:id="send" layoutX="571.0" layoutY="233.0" mnemonicParsing="false" onAction="#sendMsg" text="Send"/>
        <TextField fx:id="rec" layoutX="28.0" layoutY="114.0" prefHeight="26.0" prefWidth="149.0" promptText="Receiver"/>
        <TextArea fx:id="chat" editable="false" layoutX="201.0" layoutY="14.0" prefHeight="200.0" prefWidth="358.0"/>
        <TextArea fx:id="logs" layoutX="28.0" layoutY="286.0" prefHeight="98.0" prefWidth="531.0" promptText="LOGS"/>
    </AnchorPane>
</VBox>